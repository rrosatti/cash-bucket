<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/activityMBA_etBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_balance"/>

        <CheckBox
            android:id="@+id/activityMBA_checkAutoDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_box_auto_deposit"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/activityMBA_etAutoDepositValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/activityMBA_btConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_confirm"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/activityMBA_btCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</RelativeLayout>