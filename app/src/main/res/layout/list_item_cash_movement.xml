<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listItemCashMovement_txtValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="9pt"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/listItemCashMovement_txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="9pt"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/listItemCashMovement_imgIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/listItemCashMovement_txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:maxLength="200"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

</LinearLayout>