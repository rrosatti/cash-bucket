<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tView_bank_account"
            android:textSize="14pt"/>

        <EditText
            android:id="@+id/activityCBAccount_etBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_balance"
            android:layout_marginTop="5dp"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/activityCBAccount_checkAutoDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_box_auto_deposit"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/activityCBAccount_etValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_value"
                android:inputType="number"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/activityCBAccount_etDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_day"
                android:inputType="number"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>